

<h1>Все товары</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var cof in Model.allCoffes)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@cof.img" alt="@cof.name"/>
                <h2>Товар: @cof.name</h2>
                <p>@cof.shortDesc</p>
                <p>Цена: @cof.price.ToString("C")</p>
                <p><a class="btn btn-warning href="#" > Подробнее </a> </p>
            </div>
        }
    }
</div>
